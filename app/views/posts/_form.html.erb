<%= form_for @post do |f| %>
  <div class="form-field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="form-field">
    <%= f.label :summary %>
    <%= f.text_area :summary %>
  </div>

  <div class="form-field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="form-action ">
    <%= f.submit 'Сохранить'%>
  </div>
<% end %>