<% if @post.errors.any? %>
  <div class="aller allert-danger">
    <h5><%= t('common.errors') %></h5>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :summary %>
    <%= f.text_area :summary, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control' %>
  </div>

  <div class="form-action ">
    <%= f.submit t('common.save'), class: "btn btn-outline-success btn-lg btn-block" %>
    <%= link_to t('common.back'), :back, class: "btn btn-outline-primary btn-sm btn-block"%>
  </div>
<% end %>
