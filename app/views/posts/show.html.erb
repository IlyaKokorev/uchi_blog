<article class="post">
  <section class="post-head">
    <h1><%= @post.title %></h1>
    <small>
      <% if user_signed_in? %>
        <%= link_to 'Изменить', edit_post_path(@post), class: 'btn btn-outline-primary btn-sm' %>
        |
        <%= link_to 'Удалить', post_path(@post), method: :delete, class: 'btn btn-outline-danger btn-sm',
                    data: { confirm: 'Вы уверены?' } %>
        |
      <% end %>
      <time><%= @post.created_at.to_date.strftime("%d %B, %Y ") %></time>
    </small>
  </section>

  <section class="post-body">
    <%= @post.body %>
  </section>
</article>

